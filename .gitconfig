[user]
    name = Your Name
    email = your.email@example.com

[core]
    editor = nano
    autocrlf = input      # Handles line endings automatically

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    df = diff
    lg = log --graph --oneline --decorate --all
    last = log -1 HEAD
    unstage = reset HEAD --
    amend = commit --amend

[push]
    default = current

[branch]
    autosetuprebase = always

[fetch]
    prune = true   # Remove remote-tracking branches that no longer exist on the remote

[color]
    ui = true

[credential]
    helper = cache --timeout=28800   # Cache credentials for 8 hours
