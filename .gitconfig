[user]
    name = Muhammad Atif Ali
    email = me@matifali.dev

[core]
    editor = vim
    autocrlf = input      # Handles line endings automatically

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    df = diff
    lg = log --graph --oneline --decorate --all
    last = log -1 HEAD
    unstage = reset HEAD --
    amend = commit --amend

[push]
    default = current

[branch]
    autosetuprebase = always

[fetch]
    prune = true   # Remove remote-tracking branches that no longer exist on the remote

[color]
    ui = true

[credential]
    helper = cache --timeout=28800   # Cache credentials for 8 hours

[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = gh auth git-credential
[credential "https://gist.github.com"]
	helper = gh auth git-credential
